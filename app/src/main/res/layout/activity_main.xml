<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FAFAFA">
    <!-- #FAFAFA -->

    <!-- 메인 콘텐츠 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="#66A3FF"
            android:elevation="4dp"
            android:title="📚 지존 너굴학원 영단어"
            android:titleTextColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 툴바 아래 프로그레스바 영역 (BarChart → 수직 ProgressBar 7개로 교체) -->
        <LinearLayout
            android:id="@+id/vertical_progress_group"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            android:gravity="bottom|center"
            android:background="@drawable/rounded_box_blue_border"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/info_grid">

            <!-- 🔴 대기 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        android:id="@+id/progressBar_red_vertical"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="90"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_red_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대기"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🟠 오늘 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_orange_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="70"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_orange_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🟡 1일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_yellow_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="30"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_yellow_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🟢 3일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_green_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="50"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_green_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🔵 7일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_blue_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="70"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_blue_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🟦 15일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_navy_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="60"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_navy_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 🟣 30일 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:gravity="bottom"
                    android:paddingTop="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:id="@+id/progressBar_purple_vertical"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:progress="30"
                        android:max="100"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_bar_purple_vertical" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28일"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 타이머 텍스트 -->
        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10분 후 테스트 가능"
            android:textSize="18sp"
            android:textColor="#333"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- 정보 카드 (GridLayout 안에 CardView 4개) -->

        <!-- 하단 버튼 -->
        <!-- 정보 카드 -->
        <GridLayout
            android:id="@+id/info_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2"
            app:layout_constraintTop_toBottomOf="@id/vertical_progress_group"
            app:layout_constraintBottom_toTopOf="@id/bottom_button_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 오늘의 복습 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 복습"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/today_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120개"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 오늘의 학습 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘의 학습"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/today_learning_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50개"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 예상 완료일 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예상 완료일"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/expected_finish_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-06-29"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 이달의 성실도 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이달의 성실도"
                        android:textColor="#333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/month_diligence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <LinearLayout
            android:id="@+id/bottom_button_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_learning"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:enabled="true"
                android:visibility="visible"
                android:text="학습 시작"
                android:textSize="16sp"
                android:background="@drawable/rounded_blue_border_button"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reviewLearning"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:enabled="true"
                android:text="10분 후 복습"
                android:textSize="16sp"
                android:background="@drawable/rounded_blue_border_button"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_reviewLearning_END"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:enabled="true"
                android:text="오늘의 학습 완료!"
                android:textSize="16sp"
                android:background="#dcdcdc"
                android:textColor="#727272" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_review"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="누적 복습"
                android:textSize="16sp"
                android:background="@drawable/rounded_blue_border_button"
                android:textColor="#000000" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_passage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="맞춤 독해"
                android:textSize="16sp"
                android:background="@drawable/rounded_blue_border_button"
                android:textColor="#000000" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 왼쪽 드로어 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>